<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="15dp"
    android:background="#FFF"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cart_product_img"
        android:src="@drawable/ic_img"
        android:layout_centerVertical="true"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/cart_product_name"
        android:text="Item name"
        android:layout_toRightOf="@+id/cart_product_img"
        android:textSize="15dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_label_tv"
        android:layout_below="@+id/price_tv"
        android:layout_toRightOf="@+id/cart_product_img"
        android:layout_marginTop="10dp"
        android:text="Quantity: "
        android:textColor="#000"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_tv"
        android:text="149"
        android:layout_toRightOf="@id/cart_product_img"
        android:layout_below="@+id/cart_product_name"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currency_label"
        android:text=" EGP"
        android:layout_toRightOf="@id/price_tv"
        android:layout_below="@+id/cart_product_name"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/increment_btn"
        android:background="@drawable/blue_circle"
        android:layout_below="@+id/price_tv"
        android:layout_toRightOf="@+id/quantity_value"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="+"
        android:textColor="#FFF"
        android:gravity="center"

        />
    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/quantity_value"
        android:layout_below="@+id/price_tv"
        android:layout_toRightOf="@+id/decrement_btn"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/decrement_btn"
        android:background="@drawable/blue_circle"
        android:layout_below="@+id/price_tv"
        android:layout_toRightOf="@+id/quantity_label_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="-"
        android:textColor="#FFF"
        android:gravity="center"

        />

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/delete_cart_item"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/red_circle"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:padding="5dp"
            />

    </RelativeLayout>

</RelativeLayout>
